<% content_for(:title, t('.title')) %>
<div class='container'>
  <div class='md:w-1/2 mx-auto'>
    <div class='text-left mt-0'>
      <div class='text-gray-800 text-sm px-2 py-1'>
        <%= @board.user.name %>
      </div>
      <%= image_tag @board.board_image_url, class: 'object-contain w-full h-auto mx-auto mb-0' %>
      <div class="divider"></div>
      <div class='relative left-1/2 transform -translate-x-1/2 bg-transparent text-sm px-4 py-2 rounded-lg shadow-none'>
        <%= @board.title %>
      </div>
    </div>

    <div class='text-left mb-6'>
      <p class='mb-6 w-full mx-auto p-10 text-sm'>
        <%= @board.body %>
      </p>
    </div>
    <!-- タグ表示部分にリンクを追加 -->
    <div class="flex flex-wrap gap-2">
      <% @board.tag_list.each do |tag| %>
        <%= link_to boards_path(tag: tag), class: 'inline-block px-2 py-1 border border-gray-400 text-gray-800 bg-white rounded hover:bg-gray-100 text-sm' do %>
          #<%= tag %>
        <% end %>
      <% end %>
    </div>
    <div class='flex flex-center mb-6'>
      <div class='ml-auto'>
        <%= link_to "Xでシェア", 
                    "https://twitter.com/intent/tweet?text=#{CGI.escape('これが私のBest Buy！')}&url=#{CGI.escape(board_url(@board))}&hashtags=BestBuyGadgets", 
                    target: '_blank', 
                    class: 'inline-block px-2 py-1 border border-gray-400 text-gray-800 bg-white rounded hover:bg-gray-100 text-sm' %>
      </div>
    </div>

    <div class="text-center mb-6">
      <%= l @board.created_at, format: '%Y/%m/%d %H:%M' %>
    </div>

    <div class='text-center mb-6'>
      <%= link_to "投稿一覧へ", boards_path %>
    </div>
  </div>
</div>
