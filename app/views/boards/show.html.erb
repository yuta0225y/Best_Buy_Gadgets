<% content_for(:title, t('.title')) %>
<div class='container'>
  <div class='md:w-1/2 mx-auto'>
    <div class='relative text-center mt-0' style="position: relative;">
        <div class='relative left-1/2 transform -translate-x-1/2 bg-transparent text-xl font-semibold px-4 py-2 rounded-lg shadow-none'>
        <%= @board.title %>
        </div>
        <%= image_tag @board.board_image_url, class: 'object-contain w-full h-auto mx-auto mb-0' %>
      </div>
      <div class='text-center mb-6'>
        <p class='mb-6 w-full mx-auto bg-base-200 p-10 rounded-lg'>
          <%= @board.body %>
        </p>
      </div>
      <div class='flex flex-center mb-6'>
        <div class='ml-auto'>
          <%= link_to "Xでシェア", 
                      "https://twitter.com/intent/tweet?text=#{CGI.escape('これが私のBest Buy！')}&url=#{CGI.escape(board_url(@board))}&hashtags=BestBuyGadgets", 
                      target: '_blank', 
                      class: 'inline-block px-4 py-2 border border-gray-400 text-gray-800 bg-white rounded-full hover:bg-gray-100' %>
        </div>
    </div>
    <div class="text-center mb-6">
      <%= l @board.created_at, format: '%Y/%m/%d %H:%M' %> <!-- 日時を「2024/07/31 14:21」の形式で表示 -->
    </div>
    <div class='text-center mb-6'>
      <%= link_to "投稿一覧へ", boards_path %>
    </div>
  </div>
</div>
