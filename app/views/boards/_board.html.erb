<div class="w-1/3 sm:w-1/3 lg:w-1/3 m-0">
  <div id="board-id-<%= board.id %>" class="border-0">
    <div class="bg-white overflow-hidden border-0">
      <div class="relative w-full" style="aspect-ratio: 1 / 1;">
        <%= link_to board_path(board) do %>
          <%= image_tag board.board_image_url.presence || 'board_placeholder.png', class: "absolute inset-0 w-full h-full object-cover p-1 border-0 outline-0" %>
        <% end %>
      </div>
    </div>
  </div>
</div>